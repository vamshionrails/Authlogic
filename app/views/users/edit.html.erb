<div id="leftcol">
  <h4>Your account details</h4>

  <% form_for(@user) do |f| %>
    <%= render :partial => "form", :locals => {:f => f} %>

    <%=submit_tag "Update your account", :class => "submit" %>
  <% end %>
</div>

<div id="rightcol">
  <h4>Change your password</h4>
  <% form_for(@user) do |f| %>
    <%= render :partial => "password_resets/form", :locals => {:f => f} %>
    <%= submit_tag "Change password", :class => "submit" %>
  <% end %>
</div>